{
  "name": "meteor-apollo-accounts",
  "version": "2.0.8",
  "description": "Meteor accounts in GraphQL",
  "main": "./dist",
  "repository": {
    "url": "https://github.com/pytheas-capital/meteor-apollo-accounts",
    "type": "git"
  },
  "scripts": {
    "build": "babel ./src --out-dir ./dist",
    "prepublish": "npm run build",
    "test": "npm run lint && jest",
    "watch": "watch npm\\ run\\ build ./src",
    "test-watch": "jest --watch",
    "lint": "standard --fix \"src/**/*.js\""
  },
  "keywords": [
    "meteor",
    "apollo",
    "graphql",
    "accounts",
    "react-native"
  ],
  "author": "nicolaslopezj",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": "^7.6.0",
    "graphql-tag": "^2.11.0",
    "jest-cli": "^26.4.0",
    "standard": "^14.3.4"
  },
  "peerDependencies": {
    "graphql-tag": "^1.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "dependencies": {
    "otplib": "^12.0.1",
    "uglify-js": "^3.10.1",
    "underscore": "^1.10.2"
  },
  "standard": {
    "globals": [
      "it",
      "xit",
      "expect",
      "test",
      "jest"
    ]
  }
}